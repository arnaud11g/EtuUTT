{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'technograph.main.index.title'|trans }}{% endblock %}

{% block titleIcon %}
    <img src="{{ asset('assets/img/titles/uvs.png') }}" alt="{{ 'technograph.main.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
    {% if is_granted('ROLE_TECHNOGRAPH_ADMIN') %}
        <ul class="nav nav-tabs page-tabs">
              <li class="pull-right">
                  <a href="{{ path('technograph_article_edit') }}">
                      <i class="icon-plus"></i>
                      {{ 'technograph.main.index.new'|trans }}
                  </a>
              </li>
        </ul>
    {% endif %}
    <div class="padding20-all">
        <h2>{{ 'technograph.main.index.head'|trans }}</h4>

        <br />
        <h4>Derniers articles :</h4>
        <ul class="article-list">
            {% for article in articles %}
                <li>
                    <a href="{{ path('technograph_article_view', {'id': article.id}) }}">
                        <span>
                            {% if article.publishedAt == null %}
                                [{{ 'technograph.main.index.notPublished'|trans }}]
                            {% endif %}
                                {{ article.title }}
                        </span>
                        <span>{{ article.publishedAt|date('d/m/Y H:i') }}</span> 
                    </a>
                </li>
            {% else %}
                <li>{{ 'technograph.main.index.noResult'|trans }}</li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
